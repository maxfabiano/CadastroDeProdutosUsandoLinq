@{
    ViewData["Title"] = "Home Page";
}

@model List<Produto>

<h1>Produtos</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Descrição</th>
            <th>Preço</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var produto in Model)
        {
            <tr>
                <td>@produto.NomeProd</td>
                <td>@produto.CategProd</td>
                <td>@produto.ValorVenda</td>
            </tr>
        }
    </tbody>
</table>

